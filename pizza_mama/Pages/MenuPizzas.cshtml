@page
@model pizza_mama.Pages.MenuPizzasModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Ma Pizza Mama App</title>
</head>
<body>
    <a asp-page="Index">
        <img src="css/images/small_logo.png" id="logo-small" />
    </a>
   
    <div class="menu-title">
        <h1>Les pizzas</h1>
    </div>
    
    <div class="menu-list">
    @foreach (var pizza in Model.Pizza){
       //afficher le nom et les prix des pizzas
            <div class="menu-list-item">
                <span class="menu-list-title">@pizza.nom</span>
                <span class="menu-list-price">@String.Format("{0:0.00}", pizza.prix)€</span>
                <br />
                <span class="menu-list-ingredient">@pizza.ingredients</span>

                @if (pizza.vegetarienne)
                {
                    <span class="menu-list-vegetarienne"> Vegetarienne</span>
                }
              
            </div>
            
    }
    </div>

</body>
</html>

