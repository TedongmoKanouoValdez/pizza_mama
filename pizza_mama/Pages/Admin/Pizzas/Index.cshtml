@page
@model pizza_mama.Pages.Admin.Pizzas.IndexModel

@{
    ViewData["Title"] = "Administration de Pizzas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*  elle recupere le nom des differents champs 
                    le displayNameFor pour l'affichage des differents champs
                *@
                @Html.DisplayNameFor(model => model.Pizza[0].nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].vegetarienne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].ingredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Pizza) {
        <tr>
            <td>
                @*DisplayFor affichage le contenu de chaque champs
                    quand il ne connait pas le type
                    on pouvait encire ecrire @item.nom
                *@
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vegetarienne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredients)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PizzaId">Modifier</a> |
                <a asp-page="./Delete" asp-route-id="@item.PizzaId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
